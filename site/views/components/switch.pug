extends ../layout

block title
    title #{title} | Frog UI CSS

block contents
    .page-wrapper
        section#switch
            .section-title
                h1= title
                .section-desc 
                    p !{cont("ELEMENTS_SWITCH_SUB_TITLE")}
            .section-contents
                h4.contents-title Base 1
                .ga-segment.float.round-m.attached
                    .contents-wrapper
                        label.ga-switch.slide
                            input(type="checkbox", checked)
                            span.switch
                    .footer
                        - var code = `<label class="ga-switch slide">\n    <input type="checkbox" checked />\n    <span class="switch"/>\n</label>`
                        pre
                            code.language-markup
                                | #{code}
            .section-contents
                h4.contents-title Base 2
                .ga-segment.float.round-m.attached
                    .contents-wrapper
                        label.ga-switch.slide.inside
                            input(type="checkbox", checked)
                            span.switch
                    .footer
                        - var code = `<label class="ga-switch slide inside">\n    <input type="checkbox" checked />\n    <span class="switch"/>\n</label>`
                            pre
                                code.language-markup
                                    | #{code}
            .section-contents
                h4.contents-title Round
                .ga-segment.float.round-m.attached
                    .contents-wrapper
                        label.ga-switch.slide.inside.round
                            input(type="checkbox", checked)
                            span.switch
                    .contents-wrapper
                        label.ga-switch.slide.round
                            input(type="checkbox", checked)
                            span.switch
                    .footer
                        - var code = `<label class="ga-switch slide">\n    <input type="checkbox" checked />\n    <span class="switch round"/>\n</label>`
                            pre
                                code.language-markup
                                    | #{code}
            .section-contents
                h4.contents-title Button
                .ga-segment.float.round-m.attached
                    .contents-wrapper
                        label.ga-switch.button
                            input(type="checkbox", checked)
                            span.on.active ON
                            span.off OFF
                    .contents-wrapper
                        label.ga-switch.button.round
                            input(type="checkbox", checked)
                            span.on.active Yes
                            span.off No
                    .footer
                        - var code = `<label class="ga-switch button">\n    <input type="checkbox" checked />\n    <span class="on active">ON</span>\n    <span class="off">OFF</span>\n</label>`
                            pre
                                code.language-markup
                                    | #{code}