extends ../layout

block title
    title #{title} | Frog UI CSS

block contents
    .page-wrapper
        section#grid
            .section-title
                h1= title
                .section-desc
                    p !{cont("LAYOUT_GRID2_SUB_TITLE")}
            .section-contents
                h4.contents-title Base
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-grid2.divide-column-8.row-2
                            each col in [1, 2, 3, 4, 5, 6]
                                .column
                            each col in [1, 2, 3, 4, 5, 6]
                                .column
                    .footer
                        - var code = `<div class="ga-grid2 divide-column-{num} row-{num}">\n    <div class="column" />\n    <div class="column" />\n    ...\n    <div class="column" />\n</div>`
                        pre
                            code.language-markup
                                | #{code}
            .section-contents
                h4.contents-title Dosirak
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-grid2.dosirak.set-rows(style="--grid-col-num: 4; --grid-row-num: 3; --rows-height: 10rem")
                            each col in [[2, 1],[1, 1],[1, 2],[1, 1],[2, 1],]
                                .column(class=`col-${col[0]} row-${col[1]}`)
                    .footer
                        - var code = `<div class="ga-grid2 divide-column-{num} row-{num}">\n    <div class="column" />\n    <div class="column" />\n    ...\n    <div class="column" />\n</div>`
                        pre
                            code.language-markup
                                | #{code}
            .section-contents
                h4.contents-title Divide
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-grid2
                            .column.col-1
                            .column.col-3
                            .column.col-1
                            .column.col-3
                            .column.col-1
                            .column.col-3
                            .column.col-1
                            .column.col-3
                            .column.col-1
                            .column.col-3
                            .column.col-1
                            .column.col-3
                    .footer
                        - var code = `<div class="ga-grid2">\n    <div class="column col-{num}" />\n    <div class="column col-{num}" />\n    ...\n    <div class="column col-{num}" />\n</div>`
                            pre
                                code.language-markup
                                    | #{code}
            .section-contents
                h4.contents-title Divide (+ROW)
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-grid2.set-rows(style="--grid-row-num: 9")
                            .column.col-6.row-6
                            .column.col-6.row-4
                            .column.col-6.row-2
                            .column.col-12
                            .column.col-6.row-2
                            .column.col-6.row-2
                            
                    .footer
                        - var code = `<div class="ga-grid2 set-rows"\n style="--grid-row-num: {num}">\n    <div class="column col-{num} row-{num}" />\n    <div class="column col-{num}" />\n    ...\n    <div class="column col-{num}" />\n</div>`
                            pre
                                code.language-markup
                                    | #{code}
            .section-contents
                h4.contents-title Auto-fit
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-grid2.divide-column-10.auto-fit
                            .column
                            .column
                            .column
                            .column
                    .footer
                        - var code = `<div class="ga-grid2 auto-fit">\n    <div class="column" />\n    <div class="column" />\n    ...\n    <div class="column" />\n <!-- if (grid column > column)--> \n</div>`
                            pre
                                code.language-markup
                                    | #{code}
            //- .section-contents
                h4.contents-title  Grid + Table
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-grid2.tabled.row-2
                            .column.label.col-1 이름
                            .column.col-3.align-left 왼쪽
                            .column.label.col-1 나이
                            .column.col-3.align-center 중간
                            .column.label.col-1 직업
                            .column.col-3.align-right 오른쪽
                            .column.label.col-1 이름
                            .column.col-3.align-top 위
                            .column.label.col-1 나이
                            .column.col-3
                                .ga-select-box.fluid
                                    select
                                        option(value='') 선택
                                        option(value='10') 10
                                        option(value='20') 20
                                        option(value='30') 30
                                    i.icon.xi-caret-down
                            .column.label.col-1 직업
                            .column.col-3.align-bottom 아래
                    .footer
                        - var code = `<div class="ga-grid2 tabled row-{num}">\n    <div class="column label col-{num}" /> // <th />\n    <div class="column align-{left|center|right}" /> // <td />\n    ...\n</div>`
                            pre
                                code.language-markup
                                    | #{code}