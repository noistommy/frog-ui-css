extends ../layout

block title
    title #{title} | Frog UI CSS

block contents
    .page-wrapper
        section#badge
            .section-title
                h1= title
                .section-desc 
                    p Small visual indicators showing counts or statuses.
            .section-contents
                h4.contents-title 기본
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-button
                            | Badge
                            span.ga-badge.float 0
                        .ga-button
                            | Badge 1
                            span.ga-badge.float.primary 1
                        .ga-button
                            | Badge 10
                            span.ga-badge.float.secondary 10
                        .ga-button
                            | Badge New
                            span.ga-badge.float.red N
                        .ga-button
                            | Badge Update
                            span.ga-badge.float.green
                                i.xi-arrow-up
                        .ga-button
                            | Badge In
                            span.ga-badge.mark.primary
                    .footer
                        - var code = '<div class="some element">\n    <span class="ga-badge">{ Badge Contents }</span>\n</div>'
                            pre
                                code.language-markup
                                    | #{code}
            .section-contents
                h4.contents-title 타입
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-button
                            | Float
                            span.ga-badge.float.secondary 10
                        .ga-button
                            | Mark
                            span.ga-badge.mark.green
                    .footer
                        - var code = '<div class="some element">\n    <span class="ga-badge float">{ Badge Contents }</span>\n</div>'
                        - var code1 = '<div class="some element">\n    <span class="ga-badge mark" />\n</div>'
                            pre
                                code.language-markup
                                    | #{`<!-- Float Type -->`}
                                    | #{code}
                                    |  #{`<!-- Mark Type -->`}
                                    | #{code1}
            .section-contents
                h4.contents-title 원과 함꼐
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-button.icon.circle
                            i.xi-star
                            span.ga-badge.float.secondary 7
                        .ga-button.circle
                            | Counting Star
                            span.ga-badge.mark.green
                    .footer
                        - var code = '<div class="ga-button icon circle">\n    <i class="some icon" />\n    <span class="ga-badge float">{ Badge Contents }</span>\n</div>'
                        - var code1 = '<div class="ga-button icon circle">\n    Button Text\n    <span class="ga-badge mark" />\n</div>'
                            pre
                                code.language-markup
                                    | #{code}
                                    | #{code1}
            .section-contents
                h4.contents-title 텍스트 사용
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-button
                            | First
                            span.ga-badge.float.secondary F
                        .ga-button
                            | NEW
                            span.ga-badge.float.red New
                        .ga-button
                            | UPDATE
                            span.ga-badge.float.green Update
                    .footer
                        - var code = '<div class="some element">\n    <span class="ga-badge float">{ Badge Text }</span>\n</div>'
                            pre
                                code.language-markup
                                    | #{code}
            .section-contents
                h4.contents-title 그림자
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-button
                            | 그림자
                            span.ga-badge.float.secondary.shadow
                                i.xi-radiobox-blank
                        .ga-button
                            | 그림자
                            span.ga-badge.float.secondary
                                i.xi-close
                    .footer
                        - var code = '<div class="some element">\n    <span class="ga-badge float">{ Badge Contents }</span>\n</div>'
                            pre
                                code.language-markup
                                    | #{code}
            .section-contents
                h4.contents-title 정렬
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-button
                            | Left
                            span.ga-badge.float.secondary.shadow.align-left 30000
                        .ga-button
                            | Center
                            span.ga-badge.float.secondary.shadow.align-center 30000
                        .ga-button
                            | Right
                            span.ga-badge.float.secondary.shadow.align-right 30000
                    .footer
                        - var code = '<div class="some element">\n    <span class="ga-badge float shadow align-left">{ Badge Contents }</span>\n</div>'
                            pre
                                code.language-markup
                                    | #{code}
            .section-contents
                h4.contents-title 색상
                .ga-segment.float.round-xl.attached
                    .contents-wrapper
                        .ga-button
                            | Red
                            span.ga-badge.red 1
                        .ga-button
                            | Orange
                            span.ga-badge.orange 2
                        .ga-button
                            | Yellow
                            span.ga-badge.yellow 3
                        .ga-button
                            | Light Green
                            span.ga-badge.lightgreen 4
                        .ga-button
                            | Green
                            span.ga-badge.green 5
                        .ga-button
                            | Light Blue
                            span.ga-badge.lightblue 6
                        .ga-button
                            | Blue
                            span.ga-badge.blue 7
                        .ga-button
                            | Deep Blue
                            span.ga-badge.deepblue 8
                        .ga-button
                            | Deep Purple
                            span.ga-badge.deeppurple 9
                        .ga-button
                            | Purple
                            span.ga-badge.purple 10
                        .ga-button
                            | Brown
                            span.ga-badge.brown 11
                        .ga-button
                            | Gray
                            span.ga-badge.gray 12
                    .footer
                        - var code = '<div class="some element">\n    <span class="ga-badge { Colors }">{ Badge Contents }</span>\n</div>'
                            pre
                                code.language-markup
                                    | #{`<!-- red, orange, yellow, light-green, light-blue, blue -->`} 
                                    | #{`<!-- deep-blue, deep-purple, purple, brown, gray -->`}  
                                    | #{code}