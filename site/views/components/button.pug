extends ../layout

block title
    title #{title} Page


block contents
    .page-wrapper
        section#button.d-mode-border-color
            .section-title
                h1 Buttons
                .section-desc Buttons Description.
            .section-contents
                h4.contents-title 기본
                .ga-card.attached
                    .contents-wrapper
                        .ga-button 기본
                    .footer
                        - var code = '<button class="ga-button">기본</button>';
                            pre
                                code.language-markup #{code}
                h4.contents-title Element Type
                .ga-card.attached
                    .contents-wrapper
                        button.ga-button 태그
                        .ga-button 클레스
                    .footer
                        - var code1 = '<button class="ga-button">태그</button>';
                        - var code2 = '<div class="ga-button">클레스</div>';
                        pre
                            code.language-markup
                                | #{code1}
                                | #{code2}
                h4.contents-title Brand Color
                .ga-card.attached
                    .contents-wrapper
                        button.ga-button.primary 메인
                        button.ga-button.secondary 강조
                        button.ga-button.success 성공
                        button.ga-button.info 정보
                        button.ga-button.danger 위험
                        button.ga-button.attention 경고
                        button.ga-button.importance 중요
                    .contents-wrapper
                        button.ga-button.primary.outline 메인
                        button.ga-button.secondary.outline 강조
                        button.ga-button.success.outline 성공
                        button.ga-button.info.outline 정보
                        button.ga-button.danger.outline 위험
                        button.ga-button.attention.outline 경고
                        button.ga-button.importance.outline 중요
                    .contents-wrapper
                        button.ga-button.primary.active 메인
                        button.ga-button.secondary.active 강조
                    .footer
                        - var code = '<button class="ga-button { BRAND | STATUS }">Color</button>';
                            pre
                                code.language-markup
                                    | #{code}
                h4.contents-title Colors
                .ga-card.attached
                    - var colors1 = [{name: 'red', text: '빨강'},{name: 'orange', text: '주황'},{name: 'yellow', text: '노랑'},{name: 'lightgreen', text: '연두'},{name: 'green', text: '초록'},{name: 'lightblue', text: '하늘'},{name: 'blue', text: '파랑'}];
                    - var colors2 = [{name: 'deepblue', text: '짙은파랑'},{name: 'deeppurple', text: '짙은보라'},{name: 'purple', text: '보라'},{name: 'brown', text: '팥색'},{name: 'gray', text: '회색'}];
                        .contents-wrapper
                            each color in colors1
                                button(class=`ga-button ${color.name}`)=color.text
                        .contents-wrapper
                            each color in colors2
                                button(class=`ga-button ${color.name}`)=color.text
                        .contents-wrapper
                            each color in colors1
                                button(class=`ga-button ${color.name} outline`)=color.text
                        .contents-wrapper
                            each color in colors2
                                button(class=`ga-button ${color.name} outline`)=color.text
                    .footer
                        - var code = '<button class="ga-button { COLORS }">Color</button>';
                            pre
                                code.language-markup
                                    | #{code}
                h4.contents-title Disabled
                .ga-card.attached
                    .contents-wrapper
                        .ga-button.disabled Disabled
                        .ga-button(disabled) Disabled(attr)
                    .footer
                        - var code = '<button class="ga-button disabled">Disabled(class)</button>';
                        - var code1 = '<button class="ga-button" disabled>Disabled(attr)</button>';
                            pre
                                code.language-markup
                                    | #{code}
                                    | #{code1}
                h4.contents-title Border
                .ga-card.attached
                    .contents-wrapper
                        .ga-button.border Border
                        .ga-button.primary.border Border(Primary)
                    .footer
                        - var code = '<button class="ga-button border">Disabled(class)</button>';
                        - var code1 = '<button class="ga-button" border>Disabled(attr)</button>';
                            pre
                                code.language-markup
                                    | #{code}
                                    | #{code1}
                h4.contents-title Equal
                .ga-card.attached
                    .contents-wrapper
                        .contents-item
                            .ga-button.equal.primary 저장
                            .ga-button.equal.secondary 취소
                            .ga-button.equal.outline 보기
                            .ga-button.equal Frog UI System
                        .contents-item
                            .ga-button.equal.large.primary 저장
                            .ga-button.equal.large.secondary 취소
                            .ga-button.equal.large.outline 보기
                            .ga-button.equal.large FROG UI System
                    .footer
                        - var code = '<button class="ga-button equal">Equal</button>';
                        - var code1 = '<button class="ga-button equal large" disabled>Equal L</button>';
                            pre
                                code.language-markup
                                    | #{code}
                                    | #{code1}
                h4.contents-title Fluid
                .ga-card.attached
                    .contents-wrapper
                        .contents-item
                            .ga-button.fluid.primary 꽉차게
                        .contents-item
                            .ga-button.fluid 꽉차게
                        .contents-item
                            .ga-button.fluid.outline 꽉차게
                        .contents-item
                            .ga-button.fluid.circle 꽉차게
                    .footer
                        - var code = '<button class="ga-button fluid">Fluid</button>';
                            pre
                                code.language-markup
                                    | #{code}
                h4.contents-title Compact
                .ga-card.attached
                    .contents-wrapper
                        .ga-button.compact.primary 조그맣게
                        .ga-button.compact 조그맣게
                        .ga-button.compact.circle 조그맣게
                        .ga-button.compact.outline 조그맣게
                        .ga-button.compact
                            i.icon.left.xi-code
                            | 코드
                        .ga-button.compact.icon
                            i.xi-crown
                    .contents-wrapper
                        button.ga-button.success.compact 성공
                        button.ga-button.info.compact 정보
                        button.ga-button.danger.compact 위험
                        button.ga-button.attention.compact 경고
                        button.ga-button.importance.compact 중요
                    .footer
                        - var code = '<button class="ga-button compact">Compact</button>';
                            pre
                                code.language-markup
                                    | #{code}
                h4.contents-title Outline
                .ga-card.attached
                    .contents-wrapper
                        .ga-button.outline 테두리
                    .footer
                        - var code = '<button class="ga-button outline">Outline</button>';
                            pre
                                code.language-markup
                                    | #{code}
                h4.contents-title Icon (*Awesome Font 6)
                .ga-card.attached
                    .contents-wrapper
                        .ga-button.icon
                            i.xi-laptop
                        .ga-button.icon.outline
                            i.xi-plug
                        .ga-button.icon.circle
                            i.xi-flight-on
                    .footer
                        - var code = '<button class="ga-button icon">\n    <i class="fa fa-icon"></i>\n</button>'
                            pre
                                code.language-markup
                                    | #{code}
                h4.contents-title Circle
                .ga-card.attached
                    .contents-wrapper
                        .ga-button.icon.circle
                            i.xi-desktop
                        .ga-button.circle 동그랗게
                        .ga-button.circle A
                        .ga-button.circle.outline B
                    .footer
                        - var code = '<button class="ga-button circle">Circle</button>'
                            pre
                                code.language-markup
                                    | #{code}
                h4.contents-title Icon
                .ga-card.attached
                    .contents-wrapper
                        .ga-button
                            i.icon.left.xi-angle-left
                            | 왼쪽
                        .ga-button
                            | 오른쪽
                            i.icon.right.xi-angle-right
                    .footer
                        - var code = '<button class="ga-button">\n    <i class="icon left fa fa-icon"></i>\n    완쪽\n</button>'
                        - var code1 = '<button class="ga-button">\n    오른쪽\n    <i class="icon right fa fa-icon"></i>\n</button>'
                            pre
                                code.language-markup
                                    | #{code}
                                    | #{code1}
                h4.contents-title With Badge
                .ga-card.attached
                    .contents-wrapper
                        .ga-button.badge
                            | Best
                            .in-badge.primary Best
                        .ga-button.badge.fluid
                            | Sale
                            .in-badge.secondary Sale
                    .footer
                        - var code = '<button class="ga-button badge">\n    <sapn class="in-badge">B</span>\n    버튼 텍스트\n</button>'
                            pre
                                code.language-markup
                                    | #{code}
                                    | //  badge 사용 시 fluid 속성을 사용 할 수 없습니다
                h4.contents-title Text
                .ga-card.attached
                    .contents-wrapper
                        .ga-grid
                            .column.span-4.span-xs-6
                                .ga-button.text 텍스트
                            .column.span-4.span-xs-6
                                .ga-button.text.primary 텍스트
                            .column.span-4.span-xs-6
                                .ga-button.text
                                    i.icon.left.xi-text-size
                                    | 텍스트
                            .column.span-4.span-xs-6
                                .ga-button.text.green
                                    | 텍스트
                                    i.icon.right.xi-angle-right
                            .column.span-4.span-xs-6
                                .ga-button.text.badge
                                    | 업데이트
                                    .in-badge.ga-red  123
                    .footer
                        - var code = '<button class="ga-button text">\n    버튼 텍스트\n</button>'
                            pre
                                code.language-markup
                                    | #{code}
                h4.contents-title Buttons
                .ga-card.attached
                    .contents-wrapper
                        .ga-buttons
                            .ga-button.selected 재생
                            .ga-button 정지
                            .ga-button 일시정지
                            //- .ga-button 재시작
                            //- .ga-button 종료
                    .contents-wrapper
                        .ga-buttons
                            .ga-button.icon
                                i.xi-play
                            .ga-button.icon
                                i.xi-stop
                            .ga-button.icon
                                i.xi-pause
                            .ga-button.icon
                                i.xi-rotate-right
                            .ga-button.icon
                                i.xi-power-off
                    .contents-wrapper
                        .ga-buttons.outline
                            .ga-button 위
                            .ga-button 중앙
                            .ga-button 아래
                    .contents-wrapper
                        .ga-button-groups
                            .ga-button.outline.mini.primary
                                i.icon.left.xi-play
                                | 시작
                            .ga-button.outline.mini.primary
                                i.icon.left.xi-stop
                                | 정지
                            .ga-button.outline.mini.primary
                                i.icon.left.xi-pause
                                | 일시정지
                            //- .ga-button.outline.mini.primary
                            //-     i.icon.left.fal.fa-arrow-rotate-right
                            //-     | 재시작
                            //- .ga-button.outline.mini.primary
                            //-     i.icon.left.fal.fa-power-off
                            //-     | 종료
                    .footer
                        - var code = '<div class="ga-buttons">\n    <div class="ga-button selected">BTN 1</div>\n    <div class="ga-button">BTN 2</div>\n    <div class="ga-button">BTN 3</div>\n    <div class="ga-button">BTN 4</div>\n    ...\n </div>'
                            pre
                                code.language-markup
                                    | #{code}
block module 
    script(src="/js/button.js")
    script. 
        useSelectButton()