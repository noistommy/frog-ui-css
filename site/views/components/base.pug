extends ../layout

block title
    title #{title} | Frog UI CSS

block contents
    .page-wrapper
        section#typography
            .section-title
                h1= title
                .section-desc
                    p !{cont("BASE_TYPOGRAPHY_SUB_TITLE")}
            .section-contents
                h4.header Typography
                .ga-segment.float.round-xl
                    .contents
                        .ga-tag.label.primary
                            i.icon.left.xi-at
                            | Font Family
                        span.bold.large  
                        .contents-wrapper.pretendard
                            .ga-grid
                                .column.span-3.span-xs-12.mainWord.hero AaBb
                                .column.span-9.span-xs-12.mainWord.hero 가나다
                                .column.span-10.span-xs-12.subWord
                                    p ABCDEFGHIJKLMNOPQRSTUVWXYZ
                                    p abcdefghijklmnopqrstuvwxyz
                                    p 1234567890 ,./(){}[]\|:;"'?
                                    p 가나다라마바사
            .section-contents
                h4.header Weight
                .ga-segment.float.round-xl
                    .contents
                        .contents-wrapper
                            table.ga-table
                                thead
                                    tr 
                                        th Name 
                                        //- th Value
                                        th Usage
                                tbody
                                    tr 
                                        td Light 
                                        //- td 300 
                                        td.light Frontend Renders On Grid. 
                                    tr 
                                        td Regular 
                                        //- td 400 
                                        td Frontend Renders On Grid. 
