                                        //- td 600 
                                        td.bold Frontend Renders On Grid. 
                                    tr 
                                        td Bolder 
                                        //- td 900 
                                        td.bolder Frontend Renders On Grid. 

            .section-contents
                h4.header Letter Spacing
                .ga-segment.float.round-xl
                    .contetns
                        .contents-wrapper
                            table.ga-table
                                thead
                                    tr 
                                        th Name 
                                        //- th Value
                                        th Class
                                        th Usage
                                tbody
                                    tr 
                                        td Wider 
                                        //- td 1 
                                        td spacing-wider 
                                        td.spacing-wider Frontend Renders On Grid. 
                                    tr 
                                        td Wide 
                                        //- td 0.5 
                                        td spacing-wide 
                                        td.spacing-wide Frontend Renders On Grid. 
                                    tr 
                                        td Normal 
                                        //- td 0 
